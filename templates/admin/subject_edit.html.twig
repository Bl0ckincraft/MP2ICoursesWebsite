{% extends 'admin/dashboard.html.twig' %}

{% block content %}
    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-700 flex justify-between items-center">
            <h2 class="text-xl font-semibold">Modifier le cours</h2>
            <form method="post" action="{{ path('admin_subject_delete', {'id': subject.id}) }}" onsubmit="return confirm('Supprimer dÃ©finitivement ce cours et tous ses chapitres?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subject.id) }}">
                <button type="submit" class="text-red-500 hover:text-red-400 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Supprimer
                </button>
            </form>
        </div>

        <div class="p-6">
            {{ form_start(form) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {{ form_row(form.name) }}
                {{ form_row(form.displayName) }}
            </div>
            <div class="mt-6 flex justify-end space-x-3">
                <a href="{{ path('admin_subjects') }}" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition">
                    Annuler
                </a>
                <button type="submit" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                    Enregistrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}