{% extends 'admin/dashboard.html.twig' %}

{% block content %}
    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-700 flex justify-between items-center">
            <h2 class="text-xl font-semibold">Types d'éléments de cours</h2>
        </div>

        <div class="p-6">
            <div class="mb-8">
                <h3 class="text-lg font-medium mb-4">Ajouter un type</h3>
                {{ form_start(form) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {{ form_row(form.name) }}
                    {{ form_row(form.displayName) }}
                </div>
                <button type="submit" class="mt-4 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition">
                    Enregistrer
                </button>
                {{ form_end(form) }}
            </div>

            <div>
                <h3 class="text-lg font-medium mb-4">Types existants</h3>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-700">
                        <thead class="bg-gray-700">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Identifiant</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Nom affiché</th>
                            <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                        </tr>
                        </thead>
                        <tbody class="bg-gray-800 divide-y divide-gray-700">
                        {% for type in elementTypes %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">{{ type.name }}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">{{ type.displayName }}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="{{ path("admin_course_element_type_edit", {"id": type.id}) }}" class="text-indigo-400 hover:text-indigo-300">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-400">Aucun type défini</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}